<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="LittleRabit.Pages.Home" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <DockPanel Height="100" LastChildFill="False" Width="100">
                <ListBox x:Name="listBox" Height="100" VerticalAlignment="Bottom" Width="100">
                    <Button/>
                    <System:Object/>
                    <MenuItem/>
                    <MenuItem/>
                </ListBox>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
